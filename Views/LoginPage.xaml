<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.Views.LoginPage"
    Title="Login">

    <VerticalStackLayout 
        Padding="30" 
        Spacing="15" 
        BackgroundColor="#00BCD4">

        <Label 
            Text="Coletix" 
            FontSize="36" 
            HorizontalOptions="Center" 
            TextColor="White"
            FontAttributes="Bold"/>

        <Label 
            Text="Login" 
            FontSize="24" 
            HorizontalOptions="Center"
            TextColor="Black"
            Margin="0,20,0,0"/>

        <Entry 
            x:Name="txtUsuario"
            Placeholder="Usuário"
            BackgroundColor="#E0E0E0"
            HeightRequest="45"
           />

        <Entry 
            x:Name="txtSenha"
            Placeholder="Senha"
            IsPassword="True"
            BackgroundColor="#E0E0E0"
            HeightRequest="45"
            />

        <CheckBox 
            x:Name="chkLembrar"
            HorizontalOptions="Start"/>
        <Label 
            Text="Lembrar de mim" 
            VerticalOptions="Center"/>

        <Button 
            Text="Entrar" 
            BackgroundColor="#E91E63" 
            TextColor="White"
            CornerRadius="25"
           Clicked="OnEntrarClicked"/>

        <HorizontalStackLayout 
            HorizontalOptions="Center"
            Spacing="20"
            Margin="0,10,0,0">
            <Button Text="Criar conta" 
                    BackgroundColor="Transparent" 
                    TextColor="Black"
                    Clicked="OnCriarContaClicked"/>
            <Button Text="Esqueceu a senha?" 
                    BackgroundColor="Transparent"
                    TextColor="Black"
               />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
