<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.Views.LoginPage"
    Title="Login">

    <VerticalStackLayout 
        Padding="30" 
        Spacing="15" 
        BackgroundColor="#00BCD4">

        <Label 
            Text="Coletix" 
            FontSize="35" 
            HorizontalOptions="Center" 
            TextColor="White"
            FontAttributes="Bold"/>

        <Label 
            Text="Login" 
            FontSize="28" 
            HorizontalOptions="Center"
            TextColor="Black"
            Margin="0,20,0,0"/>

        <Label 
            Text="Usuário" 
            FontSize="21" 
            TextColor="Black"
            Margin="0,20,0,0"/>
        
        <Entry 
            x:Name="txtUsuario"
            Placeholder="Ex: João"
            BackgroundColor="#E0E0E0"
            HeightRequest="45"
            PlaceholderColor="Black"
           />
        
        <Label 
            Text="Senha" 
            FontSize="21" 
            TextColor="Black"
            Margin="0,20,0,0"/>
        
        <Entry 
            x:Name="txtSenha"
            Placeholder="Ex: Jo@o007"
            IsPassword="True"
            BackgroundColor="#E0E0E0"
            HeightRequest="45"
            PlaceholderColor="Black"
            />

        <Label 
            Text="Lembrar de mim:" 
            VerticalOptions="Center" 
            FontSize="14" 
            TextColor="Black"/>
        
        <CheckBox 
            x:Name="chkLembrar"
            HorizontalOptions="Start"/>
        
        <Button 
            Text="Entrar" 
            BackgroundColor="#E91E63" 
            TextColor="White"
            CornerRadius="25"
           Clicked="OnEntrarClicked"/>

        <HorizontalStackLayout 
            HorizontalOptions="Center"
            Spacing="20"
            Margin="0,10,0,0">
            <Button Text="Criar conta" 
                    BackgroundColor="#E91E63" 
                    TextColor="White"
                    Clicked="OnCriarContaClicked"/>
            <Button Text="Esqueceu a senha?" 
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    Clicked="OnEsqueceuSenhaClicked"
               />
        </HorizontalStackLayout>

        <Button Text="Botão temporario"
                BackgroundColor="#E91E63" 
                TextColor="White"
                Clicked="Button_Clicked"
            />

    </VerticalStackLayout>
</ContentPage>
