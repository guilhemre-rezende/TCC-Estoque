<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.InicialPage"
             Title="InicialPage">
    <VerticalStackLayout
        Padding="30" 
        Spacing="15" 
        BackgroundColor="#00BCD4">
        
        <Label 
            Text="Coletix" 
            FontSize="36" 
            HorizontalOptions="Center" 
            TextColor="White"
            FontAttributes="Bold"/>

        <HorizontalStackLayout 
            Grid.Row="1" 
            Spacing="10" 
            HorizontalOptions="Center"
            VerticalOptions="End"
            Padding="0,10,0,20">
            <Button
                Text="Cadastro Produtos"
                BackgroundColor="#E91E63"
                TextColor="White"/>
            <Button
                Text="Entrada de Produtos"
                BackgroundColor="#E91E63"
                TextColor="White"/>
            <Button
                Text="Saída de Produtos"
                BackgroundColor="#E91E63"
                TextColor="White"/>
            <Button
                Text="Relarórios"
                BackgroundColor="#E91E63"
                TextColor="White"/>

        </HorizontalStackLayout>

        <Label 
                Text="Lista de produtos" 
                HorizontalTextAlignment="Center"
                BackgroundColor="#E91E63"
                FontSize="21"
                TextColor="White"/>

        <ListView x:Name="lst_produtos">
            <ListView.Header>
                <Grid ColumnDefinitions="*,*,*,*,*">
                    <Label Grid.Column="0" Text="ID" />
                    <Label Grid.Column="1" Text="Descrição" />
                    <Label Grid.Column="2" Text="Preço" />
                    <Label Grid.Column="3" Text="Qnt" />
                    <Label Grid.Column="4" Text="Total" />
                </Grid>
            </ListView.Header>
        </ListView>

    </VerticalStackLayout>
</ContentPage>